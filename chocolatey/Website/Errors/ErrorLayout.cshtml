@* Generator : WebPage *@
@using NuGetGallery;
<!DOCTYPE html> 
<html lang="en" class="static "> 
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Chocolatey Gallery</title> 
        <link href="@Href("~/Content/dist/chocolatey.slim.css")" rel="stylesheet" />
        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
        <script src="@Href("~/Scripts/header/modernizr-2.6.2.js")"></script>
    </head>
    <body>
        <header>

        </header>
        <main class="my-auto">
            <section class="container py-3 py-md-5">
                <div class="row">
                    @RenderBody()
                </div>
            </section>
        </main>
        <footer class="bg-medium text-white">
            <section class="container-fluid bg-medium-dark text-center py-3">
                <div class="row">
                    <div class="col-12">
                        <p>
                            <strong>&copy; 2017 - @DateTime.UtcNow.Year</strong> Chocolatey Software, Inc.<br />
                            <strong>&copy; 2011 - 2017</strong> RealDimensions Software, LLC.
                        </p>

                        @{
                            string commitId = System.Configuration.ConfigurationManager.AppSettings["appharbor.commit_id"];
                            string worker = System.Configuration.ConfigurationManager.AppSettings["appharbor.worker_name"];
                        }
                        <p id="releaseTag" class="mb-0">
                            Deployed from <a href="https://github.com/chocolatey/chocolatey.org/commit/@commitId" title="View the commit.">@commitId.Substring(0, 10)</a>. You are on @worker.
                        </p>
                    </div>
                </div>
            </section>
        </footer>
        <script src="@Href("~/Scripts/jquery-3.3.1.js")"></script>
        @RenderSection("BottomScripts", required: false)
    </body>
</html>