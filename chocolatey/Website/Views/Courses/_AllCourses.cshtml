@using NuGetGallery;
@model CourseViewModel

<section id="additional-courses" class="py-3 py-lg-5">
    <div class="container">
        <h1 class="text-center mb-5">Additional Courses</h1>
        <div class="row">
            @*Getting Started with Chocolatey*@
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-dark pb-2">
                        @Html.Partial("~/Views/Courses/GettingStarted/_LeftSideColumn.cshtml")
                    </div>
                    <div class="card-body text-center">
                        <a class="h4 btn-link" href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "getting-started", courseModuleName = "home"})">@CourseProfileConstants.GettingStartedWithChocolatey</a>
                        <p class="text-muted">7 Topics | 1 Hour | <span class="level beginner">Beginner</span></p>
                        <hr />
                        <p class="text-left">In this course you will learn what exactly Chocolatey is and how it has helped thousands of companies and people just like you.</p>
                    </div>
                    <div class="card-footer text-center bg-white pt-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var siteProfile in Model.UserCourseProfiles)
                            {
                                if (siteProfile.Name == CourseProfileConstants.GettingStartedWithChocolatey && siteProfile.Completed == true)
                                {
                                    <a href="@Url.Action(MVC.Users.Profiles(Model.Username))" class="btn btn-success completed">See Badge <span class="icon-chevron-right"></span></a>
                                }
                                else if (siteProfile.Name == CourseProfileConstants.GettingStartedWithChocolatey && siteProfile.Completed == false)
                                {
                                    <a href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "getting-started", courseModuleName = "home"})" class="btn btn-success resume">Resume Course <span class="icon-chevron-right"></span></a>
                                }
                            }
                        }
                        <a href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "getting-started", courseModuleName = "home"})" class="btn btn-primary start">Start Learning</a>
                    </div>
                </div>
            </div>
            @*Installing, Upgrading, and Uninstalling Chocolatey*@
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-dark pb-2">
                        @Html.Partial("~/Views/Courses/Installation/_LeftSideColumn.cshtml")
                    </div>
                    <div class="card-body text-center">
                        <a class="h4 btn-link" href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "installation", courseModuleName = "home"})">@CourseProfileConstants.InstallingUpgradingUninstalling</a>
                        <p class="text-muted">3 Topics | < 30 Minutes | <span class="level beginner">Beginner</span></p>
                        <hr />
                        <p class="text-left">Chocolatey installs in just seconds! Learn how to get up and running with Chocolatey with a basic or more advanced install method.</p>
                    </div>
                    <div class="card-footer text-center bg-white pt-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var siteProfile in Model.UserCourseProfiles)
                            {
                                if (siteProfile.Name == CourseProfileConstants.InstallingUpgradingUninstalling && siteProfile.Completed == true)
                                {
                                    <a href="@Url.Action(MVC.Users.Profiles(Model.Username))" class="btn btn-success completed">See Badge <span class="icon-chevron-right"></span></a>
                                }
                                else if (siteProfile.Name == CourseProfileConstants.InstallingUpgradingUninstalling && siteProfile.Completed == false)
                                {
                                    <a href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "installation", courseModuleName = "home"})" class="btn btn-success resume">Resume Course <span class="icon-chevron-right"></span></a>
                                }
                            }
                        }
                        <a href="@Url.RouteUrl(RouteName.CourseName, new {courseName = "installation", courseModuleName = "home"})" class="btn btn-primary start">Start Learning</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>